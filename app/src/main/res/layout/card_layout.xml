<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/visaimg"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/visalogo1"
                />
            <TextView
                android:id="@+id/cardnumbvertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/visaimg"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/credcard"
                android:text="5670 6700 0012 5600"
                android:textSize="20sp"
                />
                <TextView
                    android:id="@+id/cardname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Holder's Name"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/cardnumbvertv"/>
                <TextView
                    android:id="@+id/expdate"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Expiry Date"
                    android:layout_below="@+id/cardnumbvertv"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20sp"/>
                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/expdate"/>
                <TextView
                    android:id="@+id/datetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/credcard"
                    android:layout_below="@id/expdate"
                    android:text="Date"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="30dp"/>
        </RelativeLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>